<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/report_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:startIconDrawable="@drawable/car"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="@color/input"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/report_title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/report_title_hint"
            android:inputType="text"
            android:paddingStart="45dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/report_location_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/location"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="@color/input"
        app:layout_constraintTop_toBottomOf="@id/report_title_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/report_location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/report_location_hint"
            android:inputType="text"
            android:paddingStart="45dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/report_date_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/calendar"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="@color/input"
        app:layout_constraintTop_toBottomOf="@id/report_location_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/report_date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/report_date_hint"
            android:inputType="date"
            android:paddingStart="45dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/report_type_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/croissant"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="@color/input"
        app:layout_constraintTop_toBottomOf="@id/report_date_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/report_type_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/report_type_hint"
            android:inputType="text"
            android:paddingStart="45dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/report_description_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/description"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="@color/input"
        app:layout_constraintTop_toBottomOf="@id/report_type_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/report_description_input"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:hint="@string/report_description_hint"
            android:inputType="textMultiLine"
            android:paddingStart="45dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/button_toggle_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/report_description_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/severity_minor"
            android:textColor="@color/title"
            app:backgroundTint="@color/toggle_button"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_moderate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/severity_moderate"
            android:textColor="@color/title"
            app:backgroundTint="@color/toggle_button"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/severity_major"
            android:textColor="@color/title"
            app:backgroundTint="@color/toggle_button"
            />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:text="@string/submit_btn"
        android:textSize="20sp"
        app:backgroundTint="@color/submit_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>